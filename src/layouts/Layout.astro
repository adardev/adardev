---
import '../styles/global.css';
import {ClientRouter} from 'astro:transitions';

const currentYear = new Date().getFullYear();
---

<html class="bg-[#001c2c] h-full flex flex-col" lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />

		<link rel="icon" href="/dist/img/tekkure_logo.svg" type="image/x-icon">
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Alata&family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">

		<meta name="generator" content={Astro.generator} />
		<title>adarlpz</title>
		<ClientRouter/>
	</head>
	<body class="bg-[#001c2c] min-h-screen flex flex-col">

		<header class="flex flex-row justify-between items-center mx-10">
			<div class="">
				<a href="/">
					<img src="/dist/img/signature_white.svg" width="50px" alt="Imagen">
				</a>
			</div>
			<div class="flex flex-row gap-14">
				<div><a href="/proyectos" class="text-xl font-bold text-white">Proyectos</a></div>
				<div><a href="/habilidades" class="text-xl font-bold text-white">Habilidades</a></div>
				<div><a href="/educacion" class="text-xl font-bold text-white">Educacion</a></div>
				<div><a href="/idiomas" class="text-xl font-bold text-white">Idiomas</a></div>
				<div><a href="/certificaciones" class="text-xl font-bold text-white">Certificaciones</a></div>
			</div>
		</header>

		<main class="flex-1 t">
			<slot />
		</main>

		<footer class="bg-[#001c2c] text-center py-4 mt-auto">
			<p class="text-thin text-gray-300">
				adarlpz &copy; <span>{currentYear}</span>
			</p>
		</footer>

	</body>
</html>