---
import TitleSection from "../components/titleSection.astro";
import Section from "../components/section.astro";
---

<Section id="about">
    <TitleSection
            imageSrc="/dist/icons/profile_icon.svg"
            imageAlt="Ícono de perfil"
            title="Sobre Mi"
    />
