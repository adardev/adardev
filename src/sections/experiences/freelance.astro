        <Section extraClass="w-4 h-4 bg-primary rounded-full flex items-center justify-center text-xs font-semibold text-transparent transition-all duration-500 ease-in-out group-hover:w-16 group-hover:h-7 group-hover:text-white group-hover:bg-primary group-hover:shadow-md" padding="false">
